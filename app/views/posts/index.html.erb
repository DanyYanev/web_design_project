<p id="notice"><%= notice %></p>
<div id="header">
  <h1 id="title">Posts</h1>
</div>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td class="button"><%= link_to 'Show', post %></td>
        <td class="button"><%= link_to 'Edit', edit_post_path(post) %></td>
        <td class="button"><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

