<%= stylesheet_link_tag "main" %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>
<table>
    <thead>
    <tr>
      <th>Body</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
      <% @post.commends.each do |commend| %>
        <tr>
          <td><%= commend.body %></td>
          <td class="button"><%= link_to 'Show', commend %></td>
          <td class="button"><%= link_to 'Edit', edit_post_path(commend) %></td>
          <td class="button"><%= link_to 'Destroy', commend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
</table>
<br>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
