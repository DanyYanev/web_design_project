<%= stylesheet_link_tag "main" %>

<p id="notice"><%= notice %></p>
<div id="header">
  <h1>Comments</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Post</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commends.each do |commend| %>
      <tr>
        <td><%= commend.post_id %></td>
        <td><%= commend.body %></td>
        <td class="button"><%= link_to 'Show', commend %></td>
        <td class="button"><%= link_to 'Edit', edit_commend_path(commend) %></td>
        <td class="button"><%= link_to 'Destroy', commend, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'Posts', posts_url %>
<%= link_to 'New Commend', new_commend_path %>
